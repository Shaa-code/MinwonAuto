<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.auto.minwonauto.MinwonMainController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="10">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>

            <GridPane alignment="CENTER" hgap="10" vgap="5">
                <Label text="공인인증서 비밀번호 : " GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <PasswordField fx:id="gonginAuthField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="민원 아이디 : " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="minwonAuthField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="민원 비밀번호 : " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <PasswordField fx:id="minwonPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </GridPane>

            <GridPane>
                <Button fx:id="startButton" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            </GridPane>

            <GridPane>
                <Button fx:id="chromeButton" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            </GridPane>

    </VBox>





</AnchorPane>
